<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_gravity="bottom"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="7.5dp"
            android:paddingRight="7.5dp"
            android:paddingTop="11dp">
            <FrameLayout
                android:id="@+id/fl_send"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:id="@+id/ll_send"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#f5f5f5"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_send_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送"
                        style="@style/filter_text"/>
                    <TextView
                        android:id="@+id/tv_send_type_more"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/triangle2_selector"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>
            </FrameLayout>
            <View
                android:layout_width="7.5dp"
                android:layout_height="match_parent"
                />
            <FrameLayout
                android:id="@+id/fl_category"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:id="@+id/ll_category"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#f5f5f5"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分类"
                        style="@style/filter_text"/>
                    <TextView
                        android:id="@+id/tv_category_more"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/triangle2_selector"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>
            </FrameLayout>
            <View
                android:layout_width="7.5dp"
                android:layout_height="match_parent"
                />
            <FrameLayout
                android:id="@+id/fl_blends"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:id="@+id/ll_blends"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#f5f5f5"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_blends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="品牌"
                        style="@style/filter_text"/>
                    <TextView
                        android:id="@+id/tv_blends_more"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/triangle2_selector"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>
            </FrameLayout>
            <View
                android:layout_width="7.5dp"
                android:layout_height="match_parent"
                />
            <FrameLayout
                android:id="@+id/fl_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:id="@+id/ll_all"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#f5f5f5"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部商品"
                        style="@style/filter_text"/>
                    <TextView
                        android:id="@+id/tv_all_more"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/triangle2_selector"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

</FrameLayout>

