<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_view"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="vertical"
    android:background="@drawable/rect_gray_bg">
    <FrameLayout
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_goods_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/test"
            />
        <TextView
            android:id="@+id/tv_sold_out"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="售 罄"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:background="@drawable/goods_sell_out"
            android:visibility="visible"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我是洗发水呀洗发水"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:maxLines="1"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp"
        android:ellipsize="end" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp">

        <TextView
            android:id="@+id/tv_cur_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="¥ 0.00"
            android:textColor="@color/theme_color"
            android:textSize="15sp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="省:"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/tv_decrease_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp">

        <TextView
            android:id="@+id/tv_old_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="¥ 0.00"

            android:textSize="15sp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>


